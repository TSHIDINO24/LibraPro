<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.Control.FrameView">
    <ContentView.Content>
        <StackLayout  HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Padding="5">
            <Frame x:Name="frame" HasShadow="True" BackgroundColor="#FC6011" BorderColor="#4A4B4D" Padding="0" CornerRadius="30">
                <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label x:Name="lblIcon"  Grid.Row="0"  HorizontalOptions="Center" VerticalOptions="End" TextColor="White" 
                             FontSize="35" FontFamily="{StaticResource FontAwesomeSolid}"  ></Label>
                    <Label x:Name="lbl" Grid.Row="1" FontFamily="L-Reg5" TextColor="White" FontSize="18" HorizontalOptions="Center" VerticalOptions="Center"></Label>
                </Grid>
            </Frame>
        </StackLayout>
    </ContentView.Content>
</ContentView>